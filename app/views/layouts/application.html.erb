<!DOCTYPE html>
<html>
  <head>
    <title>Crumblr</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
 
    <div class="container">
      <ul class="nav nav-tabs pull-right">
        <li class="nav-item">
          <%= link_to "Home", '/' %>
        </li>
        <li class="nav-item">
          <%= link_to "About", "/about" %>
        </li>
      </ul>
       <div class="page-header">
        <h1> <%= link_to "Crumblr", '/'%> 
          <small>// Home Baked Goodness</small>
        </h1>
      </div>

      <div class= "row">
        <div class="col-md-6 col-md-offset-3">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
